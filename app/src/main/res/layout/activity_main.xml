<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_x="0dp"
        android:layout_y="45dp"
        android:text="Empresas"
        android:background="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/servicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_x="0dp"
        android:layout_y="45dp"
        android:text="servicios"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="104dp" />

    <Button
        android:id="@+id/trabajador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_x="0dp"
        android:layout_y="45dp"
        android:text="Trabajadores"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/empresa"
        android:layout_alignParentStart="true"
        android:layout_marginTop="108dp" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="textPersonName"
        android:text="iOrganize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/reparar"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/editText"
        android:layout_alignTop="@+id/editText" />




</RelativeLayout>

