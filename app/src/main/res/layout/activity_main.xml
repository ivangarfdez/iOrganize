<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_x="0dp"
        android:layout_y="45dp"
        android:text="Empresas"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/servicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_x="0dp"
        android:layout_y="45dp"
        android:text="servicios"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="104dp" />

    <Button
        android:id="@+id/trabajador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_x="0dp"
        android:layout_y="45dp"
        android:text="Trabajadores"
        android:background="@android:color/darker_gray"
        android:layout_above="@+id/servicio"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="textPersonName"
        android:text="iOrganize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/reparar"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/editText"
        android:layout_alignTop="@+id/editText" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/piso"
        android:layout_alignBottom="@+id/empresa"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/red"
        android:layout_above="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginBottom="180dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/casco"
        android:layout_above="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginBottom="33dp" />



</RelativeLayout>

